%table.table-bordered.table-striped.table-condensed
  %thead
    %tr
      %th Order Id
      %th Order Status
      %th Created at
      %th Items
      %th Action
  %tbody
    - Order.where(user_id: user_id).each do |order|
      %tr
        %td= order.id
        %td #{OrderStatus.find(order.order_status_id).name}
        %td= order.created_at
        %td
          %ul
          - order.order_items.each do |item|
            %li #{item.id} #{Product.find(item.product_id).title}
        %td= button_to "Edit", edit_cart_path(order.id),class: 'btn btn-primary btn-success', :method => :post
         
