<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-md-6">
    <h3><%= @category.title %></h3>
  </div>
  <div class="col-md-6">
  <% unless @category.products.count < 1 %>
    <p><%= pluralize(@category.products.count, 'product') %></p>
     <% @category.products.each do |product| %>
   
     <div class="col-md-3 thumbnail">
      <%= image_tag product.pictures.first.image.url(:thumb) %>
      <p><%= product.title %></p>
    </div>
     
    <% end %>
    <% else %>
     <div class="col-md-3">
     <p class="notice"><%= I18n.t 'no products' %></p>
     </div>
     <% end %>
 </div>
</div>
</div>
<%= link_to 'Edit', edit_category_path(@category),class: "btn btn-link" %> |
<%= link_to 'Back', categories_path,class: "btn btn-link" %>
